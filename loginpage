        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" id="signup-confirm" placeholder="Confirm your password">
        </div>
        <button class="btn-blue" onclick="handleSignUp()">Sign Up</button>
        <div class="divider">or</div>
        <button class="btn-google" onclick="handleGoogleLogin()">
            Continue with Google
        </button>
        <p class="footer">Already have an account? <a href="#" onclick="showLogin()">Login &rsaquo;</a></p>
    </div>

    <div id="login-container" class="hidden">
        <h2>Login</h2>
        <div class="form-group">
            <label>Email</label>
            <input type="email" id="login-email" placeholder="Enter your email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" id="login-password" placeholder="Enter your password">
        </div>
        <button class="btn-blue" onclick="handleLogin()">Login</button>
        <div class="divider">or</div>
        <button class="btn-google" onclick="handleGoogleLogin()">
            Continue with Google
        </button>
        <p class="footer">Don't have an account? <a href="#" onclick="showSignup()">Sign Up &rsaquo;</a></p>
